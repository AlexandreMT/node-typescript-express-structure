{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
			"error",
			"never"
		],
		"quotes": [
			"warn",
			"single"
		],
		"prefer-const": "warn",
		"no-var": "warn",
		"no-empty": "error",
		"max-len": [
			"warn",
			{
				"code": 120
			}
		],
		"no-sparse-arrays": "error",
		"class-methods-use-this": "warn",
		"eqeqeq": "error",
		"no-empty-function": "error",
		"require-await": "error",
		"no-unused-vars": "off",
		"eol-last": [
			"error",
			"always"
		],
		"no-lonely-if": "error",
		"space-before-blocks": "error",
		"prefer-template": "error",
		"template-curly-spacing": [
			"error",
			"never"
		]
    }
}
